<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
		android:background="@drawable/green_gradient_background"
		android:padding="5dp">
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="5dp"></LinearLayout>
	    
	    <TextView
	        android:id="@+id/raceTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:textColor="@color/black"
	        android:text="Race Title"
	        android:textSize="30dp"
	        android:textStyle="bold" />

		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="5dp"></LinearLayout>
	    	    
	    <TextView
	        android:id="@+id/remainingTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:text="Remaining Time"
	        android:textSize="20dp"/>
	    
	    
	</LinearLayout>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="5"
	    android:padding="5dp"
	    android:gravity="center_horizontal"
		android:background="@drawable/grey_gradient_background">

        <LinearLayout
            android:id="@+id/linearLayout_user_score"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@color/light_green">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_score"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

            <TextView
                    android:id="@+id/textView_user_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-1"
                    android:textStyle="bold"
                    android:textSize="45dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="12dp"
                    />

            <Button
                    android:id="@+id/button_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Purchase"
                    android:layout_marginTop="0dp"
                    android:drawableTop="@drawable/ic_action_photo"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:background="@drawable/green_button_background"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:onClick="scanPurchasePressed"
                    />


            </LinearLayout>

		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="10dp"></LinearLayout>
	    	    
	    <TextView
	        android:id="@+id/raceDetailsTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:text="Race Details"
	        android:textStyle="bold"
	        android:textSize="25dp"/>
	    	    
	    <TextView
	        android:id="@+id/raceDetails"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:text="Race Details Text"
	        android:textSize="20dp"/>
	    
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="15dp"></LinearLayout>
	    	    
	    <TextView
	        android:id="@+id/prizeTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:text="Prize"
	        android:textStyle="bold"
	        android:textSize="25dp"/>
	    	    
	    <TextView
	        android:id="@+id/prize"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:text="Prize Text"
	        android:textSize="20dp"/>
	    
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="15dp"></LinearLayout>
	    	    
	    <TextView
	        android:id="@+id/locationTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:text="Location"
	        android:textStyle="bold"
	        android:textSize="25dp"/>
	    	    
	    <TextView
	        android:id="@+id/location"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:text="Location Text"
	        android:textSize="20dp"/>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="15dp"></LinearLayout>
	    <TextView
	        android:id="@+id/winners"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:text="Winners"
	        android:textStyle="bold"
	        android:textSize="25dp"/>
	    	    
	    <TextView
	        android:id="@+id/raceWinners"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:text="Winners Text"
	        android:textSize="20dp"/>
	    
	</LinearLayout>
    </ScrollView>
   
</LinearLayout>