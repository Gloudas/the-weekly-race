<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coolstorybros.the_weekly_race"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:name="com.coolstorybros.the_weekly_race.WeeklyRaceApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.coolstorybros.the_weekly_race.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coolstorybros.the_weekly_race.CreateRaceActivity"
            android:label="@string/create_race"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.coolstorybros.the_weekly_race.CurrentRacesActivity"
            android:label="@string/current_races"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.coolstorybros.the_weekly_race.EditRaceActivity"
            android:label="@string/edit_race"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.coolstorybros.the_weekly_race.ManageRaceActivity"
            android:label="@string/manage_race"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.coolstorybros.the_weekly_race.RaceDetailsActivity"
            android:label="@string/race_details"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.coolstorybros.the_weekly_race.SearchRacesActivity"
            android:label="@string/search_races"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.coolstorybros.the_weekly_race.RaceDetailsFragment"
            android:label="@string/title_activity_race_details_fragment" >
        </activity>
    </application>

</manifest>
